<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="SpareParts.Mobile.App"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:SpareParts.Mobile.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Common/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <vm:ViewModelLocator xmlns:vm="clr-namespace:SpareParts.Mobile.ViewModels" x:Key="Locator" />

            <converters:FirstCharToUpperConverter x:Key="FirstCharToUpperConverter" />
            <converters:StringToColorConverter x:Key="StringToColorConverter" />
            <converters:DateTimeOffsetToLocalTimeConverter x:Key="DateTimeOffsetToLocalTimeConverter" />
        </ResourceDictionary>

    </Application.Resources>
</Application>